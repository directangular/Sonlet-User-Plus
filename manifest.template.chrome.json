{
    "manifest_version": 3,
    "name": "Sonlet User Plus",
    "version": "${VERSION}",
    "description": "Supercharge your Sonlet!",
    "icons": {
        "48": "icons/sup-icon-48x48.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/sup-icon-16x16.png",
            "24": "icons/sup-icon-24x24.png",
            "32": "icons/sup-icon-32x32.png"
        },
        "default_title": "Sonlet User Plus",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "https://sonlet.com/*",
            "https://beta.sonlet.com/*",
            "http://localhost:8000/*"
        ],
        "js": [
            "${BROWSER_POLYFILL}",
            "js.cookie.js",
            "sup-common.js",
            "sup-dom.js",
            "sup-message-area.js",
            "sup-sonlet.js"
        ],
        "css": ["sup-message-area.css"]
    }, {
        "matches": [
            "https://www.facebook.com/*"
        ],
        "js": [
            "${BROWSER_POLYFILL}",
            "js.cookie.js",
            "sup-common.js",
            "sup-dom.js",
            "sup-message-area.js",
            "sup-fb.js"
        ]
    }],
    "background": {
        "service_worker": "sup-background.js",
	"type": "module"
    },
    "permissions": [
        "tabs", "activeTab", "storage"
    ]
}
