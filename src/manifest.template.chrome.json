{
    "manifest_version": 3,
    "name": "Sonlet Uploader",
    "version": "${VERSION}",
    "description": "Posts your Sonlet inventory to Facebook.",
    "icons": {
        "48": "icons/sup-icon-48x48.png"
    },
    "content_scripts": [{
        "matches": [
            "https://sonlet.com/*",
            "https://beta.sonlet.com/*",
            "http://localhost:8000/*"
        ],
        "js": ["browser-polyfill.min.js", "sup-common.js", "sup-sonlet.js"]
    }, {
        "matches": [
            "https://www.facebook.com/*"
        ],
        "js": ["browser-polyfill.min.js", "sup-common.js", "sup-fb.js"]
    }],
    "background": {
        "service_worker": "sup-background.js",
	"type": "module"
    }
}
