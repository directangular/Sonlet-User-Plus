{
    "manifest_version": 3,
    "name": "Sonlet Uploader",
    "version": "${VERSION}",
    "description": "Posts your Sonlet inventory to Facebook.",
    "icons": {
        "48": "icons/sup-icon-48x48.png"
    },
    "content_scripts": [{
        "matches": [
            "https://sonlet.com/*",
            "https://beta.sonlet.com/*",
            "http://localhost:8000/*"
        ],
        "js": [
            "${BROWSER_POLYFILL}",
            "sup-common.js",
            "sup-dom.js",
            "sup-message-area.js",
            "sup-sonlet.js"
        ],
        "css": ["sup-message-area.css"]
    }, {
        "matches": [
            "https://www.facebook.com/*"
        ],
        "js": [
            "${BROWSER_POLYFILL}",
            "sup-common.js",
            "sup-dom.js",
            "sup-message-area.js",
            "sup-fb.js"
        ]
    }],
    "background": {
        "scripts": ["sup-background.js"]
    },
    "permissions": [
        "storage"
    ]
}
